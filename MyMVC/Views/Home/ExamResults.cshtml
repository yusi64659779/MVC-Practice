@{
    Layout = null;
}

<!DOCTYPE>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Exams</title>
</head>
<body>
    <h2>Here is the list of exam results that you took in this semester:</h2>
    <table>
        <thead>
            <tr>
                <th>CourseID</th>
                <th>CourseName</th>
                <th>Mark</th>
            </tr>
        </thead>
        <tbody>
            @foreach (MyMVC.Models.ExamResults r in Model)
            {
                <tr>
                    <td>@r.CourseID</td>
                    <td>@r.CourseName</td>
                    <td>@r.Mark</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>